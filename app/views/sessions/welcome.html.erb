<div id="nav">
  <h1>Welcome!</h1>
</div>
<br>
<div id="userNav">
  <% if logged_in? %>
      <p id="username">You are logged in as <%= current_user.username %></p>
      <!-- <div id="links"> -->
      <%= link_to "Logout", logout_path %>
      <%= link_to "New Post", newpost_path %>
      <!-- </div> -->
  <% else %>
      <p id="username">You are a guest, please login or signup</p>

      <%= link_to "Login", login_path %>
      <%= link_to "Sign Up", signup_path %>

  <%end%>
</div>

<div id="postDiv">
  <% @posts.each do |post| %>
    <div class="post">
      <img src="<%=post.image%>"/>
      <p id="postDescription"><%= post.description %></p>
    </div>
  <% end %>
