<div>
  <h1>Welcome!</h1>
</div>
<br>
<div>
  <% if logged_in? %>
      <p>You are logged in as <%= current_user.username %></p>
      <%= link_to "Logout", logout_path %>
      <%= link_to "New Post", newpost_path %>
  <% else %>
      <p>You are a guest, please login or signup</p>
      <br>
      <%= link_to "Login", login_path %>
      <br>
      <%= link_to "Sign Up", signup_path %>
  <%end%>
</div>

<% @posts.each do |post| %>
  <img src="<%=post.image%>"/>
  <br>
  <p><%= post.description %></p>
<% end %>
